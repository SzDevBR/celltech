<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CellTech - Página Inicial</title>
</head>
<body>
  <h1>Bem-vindo à CellTech</h1>
  <p>Conheça mais sobre nossos serviços de informática.</p>
  
  <h2>Verificar Status do Item</h2>
  <p>Insira o código de serviço para verificar o status do seu item.</p>
  <form action="/services/check-status" method="post">
    <label for="serviceCode">Código de Serviço:</label>
    <input type="text" id="serviceCode" name="serviceCode" required>
    <button type="submit">Verificar</button>
  </form>

  <% if (status) { %>
    <p>Status do Item: <%= status %></p>
    <p><strong>Status:</strong> <%= service.status %></p>
    <p><strong>Comentários do Técnico:</strong> <%= service.technicianComments %></p>
  <% } %>
</body>
</html>
